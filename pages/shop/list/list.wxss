/* pages/shop/list/list.wxss */

.shop-item{
     display: flex;
     flex-direction: row;
     padding: 20rpx;
     border-bottom: 1rpx solid #ddd;
     position: relative;
}

.shop-item image{
     width: 150rpx;
     height: 150rpx;
     margin-right: 20rpx;
}

.shop-info{
     display: flex;
     flex-direction: column;
     font-size: 12px;
     width: 400rpx;
     margin-right: 20rpx;
     line-height: 1.5;
     color: #666;
}

.shop-name{
     font-size: 16px;
     color: #333;
}

.shop-start{
     color: #e2e2e2;
     right: 20rpx;
     top: 20rpx;
     position: absolute;
     width: 150rpx;
}

.start-before{
     color: #f19e38;
     position: absolute;
     left: 0;
     top: 0;
     overflow: hidden;
}
