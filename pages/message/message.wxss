/* pages/message/message.wxss */
page{
     background-color: #f1f1f1;
}

.card{
     background-color: #fff;
     border: 1rpx solid #ddd;
     border-radius: 10rpx;
     margin: 60rpx 20rpx;
     padding: 20rpx 30rpx;
     display: flex;
     flex-direction: column;
}

.card-title{
     font-size: 40rpx;
     margin-bottom: 20rpx;
}

.card-date{
     font-size: 28rpx;
     color: #ccc;
     padding-bottom: 20rpx;
     border-bottom: 1rpx  solid #ddd;
     margin-bottom: 20rpx;
}

.card image{
     width: 100%;
     height: 300rpx;
}

.card-desc{
     font-size: 36rpx;
     color: #333;
     border-bottom: 1rpx solid #ddd;
     padding: 20rpx 0;
     margin: 20rpx 0;
}

.card-read{
     font-size: 28rpx;
     color: #666;
}
